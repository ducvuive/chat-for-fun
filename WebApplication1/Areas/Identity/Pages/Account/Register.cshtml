@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var error = TempData["ErrorRegister"] as string;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<section class="h-custom">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fs-4 fw-bold mx-3 mb-0">Sign up</p>
                    </div>
                    @if (error != null)
                    {
                        <p class="text-danger">@error</p>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Username</label>
                        <input id="form3Example3" class="form-control "
                               placeholder="Nhập username" asp-for="Input.UserName" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example11">Email address</label>
                        <input type="email" id="form3Example11" class="form-control "
                               placeholder="Nhập địa chỉ email" asp-for="Input.Email" />
                    </div>
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Password</label>
                        <input type="password" id="form3Example4" class="form-control "
                               placeholder="Nhập mật khẩu" asp-for="Input.Password" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="Input.ConfirmPassword">Confirm password</label>
                        <input class="form-control "
                               placeholder="Nhập lại mật khẩu" asp-for="Input.ConfirmPassword" />
                    </div>
                    <div class="form-outline mb-3">
                        <label class="form-label" for="Fullname" asp-for="Input.FullName">Full Name</label>
                        <input id="Fullname" class="form-control "
                               placeholder="Nhập họ và tên" asp-for="Input.FullName" />
                    </div>
                    <div class="form-outline">
                        <p>Select your avatar</p>
                        <label>
                            <input asp-for="Input.Avatar" type="radio" value="0" checked />
                            <img class="avatar-icon" src="~/images/icons/avatar1.png" alt="" />
                        </label>
                        <label>
                            <input asp-for="Input.Avatar" type="radio" value="1" />
                            <img class="avatar-icon" src="~/images/icons/avatar2.png" alt="" />
                        </label>
                        <label>
                            <input asp-for="Input.Avatar" type="radio" value="2" />
                            <img class="avatar-icon" src="~/images/icons/avatar3.png" alt="" />
                        </label>
                        <label>
                            <input asp-for="Input.Avatar" type="radio" value="3" />
                            <img class="avatar-icon" src="~/images/icons/avatar4.png" alts="" />
                        </label>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button class="btn btn-primary btn-lg"
                                type="submit"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Sign up
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Do you already have an account? <a href="/Account/Login"
                                                         class="link-danger">Log in</a>
                        </p>
                    </div>

                </form>
            </div>
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/images/background/bg_login.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>