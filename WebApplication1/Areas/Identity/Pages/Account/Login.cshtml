@page
@model LoginModel

@{
    //ViewData["Title"] = "Log in";
    var error = TempData["Error"] as string;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<section class="h-custom">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/images/Logo/bg_login.jpg"
                     class="img-fluid" alt="Login image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form id="account" method="post">
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fs-4 fw-bold mx-3 mb-0">Log in</p>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Email input -->
                    <div class="form-outline mb-4 form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control"
                               placeholder="Enter a valid username" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3 form-group">
                        <label class="form-label" for="form3Example4">Password</label>
                        <input type="password" id="form3Example4" class="form-control "
                               placeholder="Enter password" asp-for="Input.Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button @*type="button"*@ class="btn btn-primary btn-lg"
                                type="submit"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Sign in
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Do you already have an account? <a href="/Account/Register"
                                                         class="link-danger">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>